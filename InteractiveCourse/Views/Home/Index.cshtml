@model IEnumerable<InteractiveCourse.Models.CourseViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<!--? slider Area Start-->
<section class="slider-area ">
    <div class="slider-active">
        <!-- Single Slider -->
        <div class="single-slider slider-height d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-6 col-lg-7 col-md-12">
                        <div class="hero__caption">
                            <h1 data-animation="fadeInLeft" data-delay="0.2s">Platforma edukacyjna<br> online</h1>
                            <p data-animation="fadeInLeft" data-delay="0.4s">
                                Rozwijaj swoje umiejętności dzięki kursom, oferowanym przez nasza platforme edukacyjna.
                            </p>
                            <a href="#" class="btn hero-btn" data-animation="fadeInLeft" data-delay="0.7s">Dołącz za darmo</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ? services-area -->
<div class="services-area">
    <div class="container">
        <div class="row justify-content-sm-center">
            <div class="col-lg-4 col-md-6 col-sm-8">
                <div class="single-services mb-30">
                    <div class="features-icon">
                        <img src="~/theme/assets/img/icon/icon1.svg" alt="">
                    </div>
                    <div class="features-caption">
                        <h3>Kursy sa darmowe</h3>
                        <p>Bezpłatne materiały do nauki dostepne na platfomie</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-8">
                <div class="single-services mb-30">
                    <div class="features-icon">
                        <img src="~/theme/assets/img/icon/icon2.svg" alt="">
                    </div>
                    <div class="features-caption">
                        <h3>Różnorodne kursy</h3>
                        @*<p>Odkryj gamę aktualnych tematów i wybierz interesujący Cię temat.</p>*@
                        <p>Znajdź dla siebie kurs który Cię zainteresuje</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-8">
                <div class="single-services mb-30">
                    <div class="features-icon">
                        <img src="~/theme/assets/img/icon/icon3.svg" alt="">
                    </div>
                    <div class="features-caption">
                        <h3>Dożywotni dostęp</h3>
                        <p>Dostęp do materiałów przez 24/7</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Courses area start -->
<div class="courses-area section-padding40 fix">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-7 col-lg-8">
                <div class="section-tittle text-center mb-55">
                    <h2>Nasze wyróżnione kursy</h2>
                </div>
            </div>
        </div>
        <div class="courses-actives">
            <!-- Single -->
            @foreach (var view in Model)
            {
                <div class="properties pb-20">
                    <div class="properties__card">
                        <div class="properties__img overlay1">
                            <a a asp-area="" asp-controller="Course" asp-action="Courses" asp-route-coursesId="@view.Id"><img src="~/theme/assets/img/gallery/@view.PictureName" alt=""></a>
                        </div>
                        <div class="properties__caption">
                            <p>@view.Experience</p>
                            <h3><a asp-area="" asp-controller="Course" asp-action="Courses" asp-route-coursesId="@view.Id">@view.Name</a></h3>
                            <p>
                                @view.Description
                            </p>
                            <div class="properties__footer d-flex justify-content-between align-items-center">
                                <div class="restaurant-name">
                                    <div class="rating">
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star-half"></i>
                                    </div>
                                    <p><span>(4.5)</span> based on 120</p>
                                </div>
                                <div class="price">
                                    <span>@*$135*@</span>
                                </div>
                            </div>
                            <a asp-area="" asp-controller="Course" asp-action="Courses" asp-route-coursesId="@view.Id" class="border-btn border-btn2">Dowiedz się więcej</a>
                        </div>

                    </div>
                </div>
            }
            <!-- Single -->
        </div>
    </div>
</div>
<!-- Courses area End -->
<!--? About Area-1 Start -->
<section class="about-area1 fix pt-10">
    <div class="support-wrapper align-items-center">
        <div class="left-content1">
            <div class="about-icon">
                <img src="~/theme/assets/img/icon/about.svg" alt="">
            </div>
            @*section tittle*@
            <div class="section-tittle section-tittle2 mb-55">
                <div class="front-text">
                    <h2 class="">Ucz się nowych umiejętności online z najlepszymi kursami</h2>
                    <p>
                        Rozwijaj swoje umiejętności dzięki kursom, oferowanym przez nasza platforme edukacyjna.
                    </p>
                </div>
            </div>
            <div class="single-features">
                <div class="features-icon">
                    <img src="~/theme/assets/img/icon/right-icon.svg" alt="">
                </div>
                <div class="features-caption">
                    <p>Zdobywaj kwalifikacje bez wychodzenia z domu lub podczas podróży. </p>
                </div>
            </div>
            <div class="single-features">
                <div class="features-icon">
                    <img src="~/theme/assets/img/icon/right-icon.svg" alt="">
                </div>
                <div class="features-caption">
                    <p>Oszczędzaj swój czas i pieniądze korzystając z kursów internetowych na naszej platformie.</p>
                </div>
            </div>

            <div class="single-features">
                <div class="features-icon">
                    <img src="~/theme/assets/img/icon/right-icon.svg" alt="">
                </div>
                <div class="features-caption">
                    <p>Ucz sie swoim tempem, dostęp do kursów bez ograniczeń. </p>
                </div>
            </div>
        </div>
        <div class="right-content1">
            @*img*@
            @*<div class="right-img">*@
            @*<img src="~/theme/assets/img/gallery/about.png" alt="">*@

            <div class="video-icon">
                <iframe width="800" height="450" src="https://www.youtube.com/embed/9Ewq7ovANuY" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>
            @*</div>*@
        </div>
    </div>
</section>

